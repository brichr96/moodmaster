<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" />
        </shape>
    </item>

    <!-- Circles -->
    <item android:gravity="top|start">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#45A247" />
            <size android:width="300dp" android:height="300dp" />
        </shape>
    </item>
    <item android:gravity="bottom|start" android:left="100dp" android:top="120dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#45A247" />
            <size android:width="250dp" android:height="250dp" />
        </shape>
    </item>
    <item android:gravity="top|end" android:right="70dp" android:top="120dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#45A247" />
            <size android:width="250dp" android:height="250dp" />
        </shape>
    </item>
    <item android:gravity="bottom|end" android:left="70dp" android:top="170dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#45A247" />
            <size android:width="200dp" android:height="200dp" />
        </shape>
    </item>
</layer-list>
